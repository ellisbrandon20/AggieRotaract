<%= form_tag :method => :post, :class => 'form-signin', :controller => 'user', :action => 'login' do %>
    <h1 class="form-signin-heading text-muted">Sign Up/Log In</h1>

  <input name="login_UIN" type="text" class="form-control" maxlength="9" placeholder="UIN" required="" autofocus="">
  <div class="row">
    <div class="col-md-8">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Log In</button>
    </div>
    <div class="col-md-4">
      <a href=<%= new_user_path %> class="btn btn-lg btn-link btn-block">Sign Up</a>
    </div>
  </div>
<% end %>