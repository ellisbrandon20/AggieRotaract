<html>
    <!-- <head/> -->
    <style>
        .center {
          margin: auto;
          width: 30%;
          padding: 10px;
        }

        label { padding-bottom: 10px;
          font-weight: normal;
        }
    </style>
</html>

<%= form_tag :method => :post, :class => 'form-signin', :controller => 'user', :url => new_user_path, :action => 'create' do %>

  <div class="center">
    <h1>Create New User</h1>
    <label>
  	 <input name="UIN" type="text" class="form-control" pattern="\d{9}" maxlength="9" placeholder="UIN" autofocus="" required>
    </label>

    <label>
      <input name="name" type="text" class="form-control" pattern="[a-zA-Z ]+" placeholder="Name" autofocus="" required>
    </label>

    <label>
      <input name="phone" type="text" class="form-control" pattern="\d{10}" maxlength="10" placeholder="Phone" autofocus="" required>
    </label>
  	
    <label>
      <input name="email" type="text" class="form-control" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" placeholder="Email" autofocus="" required>
    </label>

    <label>
      <input name="street" type="text" class="form-control" placeholder="Street" autofocus="" required>
    </label>

    <label>
      <input name="city" type="text" class="form-control" placeholder="City" autofocus="" required>
    </label>

    <label>
      <input name="state" type="text" class="form-control" placeholder="State" autofocus="" required>
    </label>
  	
    <label>
      <input name="zip" type="text" class="form-control" placeholder="ZIP Code" autofocus="" required>
    </label>
  	
    <label>
      Classification:
      <select name="classification" required>
        <option value="Freshman">Freshman</option>
        <option value="Sophomore">Sophomore</option>
        <option value="Junior">Junior</option>
        <option value="Senior">Senior</option>
        <option value="Graduate">Graduate</option>
      </select>
    </label>
  	
    <label>
      <input name="major" type="text" class="form-control" maxlength="9" placeholder="Major" autofocus="" required>
    </label>
  	
    <label>
      Shirt Size:
      <select name="shirt" required>
        <option value="X-Small">X-Small</option>
        <option value="Small">Small</option>
        <option value="Medium">Medium</option>
        <option value="Large">Large</option>
        <option value="X-Large">X-Large</option>
        <option value="XX-Large">XX-Large</option>
        <option value="XXX-Large">XXX-Large</option>
      </select>
    </label>

    <label>
      Gender:
      <form action="" name="gender" required>
        <input type="radio" name="gender" value="male"> Male
        <input type="radio" name="gender" value="female"> Female
      </form>
    </label>

  	<div class="col-md-8">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Create User</button>
    </div>
    <div class="col-md-8" style="padding-top: 1em;">
      <a href=<%= url_for(:back) %> class="btn btn-lg btn-default btn-block" >Go Back</a>
    </div>
  </div>
<% end %>
    