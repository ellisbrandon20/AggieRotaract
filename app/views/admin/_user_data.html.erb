<div class="table-responsive">
    <table class="table table-striped table-hover table-fixed">
        <thead>
          <tr>
            <th class="col-sm-2">Name</th>
            <th class="col-sm-1">Officer</th>
            <th class="col-sm-1">Phone</th>
            <th class="col-sm-1">Email</th>
            <th class="col-sm-2">Address</th>
            <th class="col-sm-1">Classification</th>
            <th class="col-sm-1">Major</th>
            <th class="col-sm-1">Shirt</th>
            <th class="col-sm-1">Gender</th>
            <th class="col-sm-1">Active</th>
          </tr>
        </thead>
        <tbody>
            <% @data.each do |row| %>
                <tr>
                    <td><%= row.name %></td>
                    <td><%= row.officer %></td>
                    <td><%= row.phone %></td>
                    <td><%= row.email %></td>
                    <td><%= row.address %></td>
                    <td><%= row.classification %></td>
                    <td><%= row.major %></td>
                    <td><%= row.shirt %></td>
                    <td><%= row.gender %></td>
                    <td><%= row.active %></td>
                </tr>
            <% end %>

        </tbody>
    </table>
    
    <a href="/user.csv"><button class="btn btn-default btn-lg" id="export-users-csv">Export User data</button></a>
    
</div>